#!/usr/bin/env perl

BEGIN {
	require File::Basename;
	push @INC, File::Basename::dirname(__FILE__) . '/../lib/';
}

require Defaults;


my $git_bin = Defaults::GIT_BIN();
my $git_base = Defaults::GIT_REPOS_BASE();
my %repos = Defaults::REPOSITORIES();
for my $repo (keys %repos) {
	my $repo_path = $repos{$repo};
	system("$git_bin $repo_path $git_base/$repo");
}