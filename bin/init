#!/usr/bin/env perl

BEGIN {
	require File::Basename;
	push @INC, File::Basename::dirname(__FILE__) . '/../lib/';
}
require Defaults;

# Prevent useless warnings
$Defaults::GIT_BIN = $Defaults::GIT_BIN;
$Defaults::GIT_REPOS_BASE = $Defaults::GIT_REPOS_BASE;

my $git_bin = $Defaults::GIT_BIN;
my $git_base = $Defaults::GIT_REPOS_BASE;
for my $repo (keys %Defaults::REPOSITORIES) {
	my $repo_path = $Defaults::REPOSITORIES{$repo};
	system("$git_bin $repo_path $git_base/$repo");
}
