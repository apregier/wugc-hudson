#!/bin/bash -l

# This is used by Jenkins jobs to run build tests.

set -o errexit
set -o pipefail
set -o nounset

PERL_VERSION="$1"

# GENOMECI_BASEDIR is set in ~/.bashrc
$GENOMECI_BASEDIR/bin/prepare-submodules ur workflow
$GENOMECI_BASEDIR/bin/rebuild-meta-db
$GENOMECI_BASEDIR/bin/set-perl $PERL_VERSION

SLEEP_SEC=90
echo -e "\n\n => Sleeping $SLEEP_SEC seconds (NFS Cache SuX)..."
sleep $SLEEP_SEC

echo -e "\n\n"
